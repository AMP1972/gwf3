<?php 
final class Item_Remington_Roomsweeper extends SR_Shotgun
{
	public function getAttackTime() { return 25; }
	public function getAmmoName() { return 'Ammo_Shotgun'; }
	public function getBulletsMax() { return 6; }
	public function getBulletsPerShot() { return 1; }
	public function getReloadTime() { return 22; }
	public function getItemLevel() { return 8; }
	public function getItemWeight() { return 650; }
	public function getItemPrice() { return 750; }
	public function getItemDescription() { return 'A revolver shooting shotgun gauge. You could surely run amok in Element\'s school with it.'; }
	public function getItemRequirements() { return array('firearms'=>3,'strength'=>2); }
	public function getItemModifiersA(SR_Player $player)
	{
		return array(
			'attack' => 10,
			'min_dmg' => 3,
			'max_dmg' => 12,
		);
	}
}
?>
