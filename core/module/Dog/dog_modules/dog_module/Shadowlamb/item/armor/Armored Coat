<?php
final class Item_Armored Coat extends SR_Armor
{
	public function getItemLevel() { return 10; }
	public function getItemPrice() { return 500; }
	public function getItemWeight() { return 3500; }
	public function getItemDescription() { return 'A protective coat, used by street shamans and samurai.'; }
	public function getItemUsetime() { return 120; }
	public function getItemModifiersA(SR_Player $player)
	{
		return array(
			'defense' => 1.75,
			'marm' => 2.0,
			'farm' => 2.5,
		);
	}
}
?>
