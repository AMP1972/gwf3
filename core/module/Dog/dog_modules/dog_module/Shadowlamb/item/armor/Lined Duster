<?php
final class Item_Lined Duster extends SR_Armor
{
	public function getItemLevel() { return 7; }
	public function getItemPrice() { return 450; }
	public function getItemWeight() { return 3500; }
	public function getItemDescription() { return 'A lightweight, protective coat, used by street shamans and samurai alike.'; }
	public function getItemUsetime() { return 110; }
	public function getItemModifiersA(SR_Player $player)
	{
		return array(
			'defense' => 1.05,
			'marm' => 1.5,
			'farm' => 2.0,
		);
	}
}
